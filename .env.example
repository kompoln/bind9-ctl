# BIND connection
BIND_SERVER=127.0.0.1
BIND_PORT=53
BIND_VIEW=default

# Base64-encoded content of a BIND key file (see README)
BIND_TSIG_KEYFILE_B64=

# Optional overrides for TSIG parsing (fallback if missing from key file)
# BIND_TSIG_NAME=
# BIND_TSIG_ALGORITHM=hmac-sha256

# Directories and tooling
ZONE_OUTPUT_DIR=zones
TEMPLATES_DIR=templates
NAMED_CHECKZONE_BIN=named-checkzone
RNDC_BIN=rndc
RNDC_SERVER=127.0.0.1

# Serial generation strategy: epoch | date
SERIAL_STRATEGY=date

# Default TTL when a record omits it
DEFAULT_RECORD_TTL=3600

# Git automation
GIT_AUTO_COMMIT=true
GIT_COMMIT_TEMPLATE=feat(zone): update {zone}

# Logging
LOG_LEVEL=INFO

